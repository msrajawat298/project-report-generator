name: Analyze Project
on:
  push:
    branches:
      - main
jobs:
  analyze:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Run Analysis
        uses: msrajawat298/project-report-generator@v1.0.2
        with:
          report_format: 'md'
          commit_report: 'true'
